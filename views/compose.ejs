<%- include("partials/header") -%>
<h1>Compose</h1>


<form method="post" action="/compose">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" name="postTitle" type="text">
    </div>

    <div class="form-group">
        <label for="post">Post</label>
        <textarea class="form-control" id="post" name="postBody" cols="150" rows="10"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%- include("partials/footer") -%>